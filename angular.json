{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "cli": {
    "packageManager": "pnpm",
    "analytics": false,
    "schematicCollections": [
      "@cypress/schematic",
      "@schematics/angular"
    ]
  },
  "newProjectRoot": "projects",
  "projects": {
    "sample-lib": {
      "projectType": "library",
      "root": "projects/sample-lib",
      "sourceRoot": "projects/sample-lib/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/sample-lib/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/sample-lib/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/sample-lib/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "tsConfig": "projects/sample-lib/tsconfig.spec.json",
            "polyfills": [
              "zone.js",
              "zone.js/testing"
            ]
          }
        },
        "cypress-run": {
          "builder": "@cypress/schematic:cypress",
          "options": {
            "devServerTarget": "sample-lib:serve",
            "configFile": "projects/sample-lib/cypress.config.js"
          },
          "configurations": {
            "production": {
              "devServerTarget": "sample-lib:serve:production"
            }
          }
        },
        "cypress-open": {
          "builder": "@cypress/schematic:cypress",
          "options": {
            "watch": true,
            "headless": false,
            "configFile": "projects/sample-lib/cypress.config.js"
          }
        },
        "ct": {
          "builder": "@cypress/schematic:cypress",
          "options": {
            "devServerTarget": "sample-lib:serve",
            "watch": true,
            "headless": false,
            "testingType": "component"
          },
          "configurations": {
            "development": {
              "devServerTarget": "sample-lib:serve:development"
            }
          }
        },
        "e2e": {
          "builder": "@cypress/schematic:cypress",
          "options": {
            "devServerTarget": "sample-lib:serve",
            "watch": true,
            "headless": false
          },
          "configurations": {
            "production": {
              "devServerTarget": "sample-lib:serve:production"
            }
          }
        }
      }
    },
    "dummy": {
      "projectType": "application",
      "schematics": {},
      "root": "projects/dummy",
      "sourceRoot": "projects/dummy/src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:application",
          "options": {
            "outputPath": "dist/dummy",
            "index": "projects/dummy/src/index.html",
            "browser": "projects/dummy/src/main.ts",
            "polyfills": [
              "zone.js"
            ],
            "tsConfig": "projects/dummy/tsconfig.app.json",
            "assets": [
              {
                "glob": "**/*",
                "input": "projects/dummy/public"
              }
            ],
            "styles": [
              "projects/dummy/src/styles.css"
            ],
            "scripts": []
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kB",
                  "maximumError": "1MB"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "2kB",
                  "maximumError": "4kB"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "dummy:build:production"
            },
            "development": {
              "buildTarget": "dummy:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "polyfills": [
              "zone.js",
              "zone.js/testing"
            ],
            "tsConfig": "projects/dummy/tsconfig.spec.json",
            "assets": [
              {
                "glob": "**/*",
                "input": "projects/dummy/public"
              }
            ],
            "styles": [
              "projects/dummy/src/styles.css"
            ],
            "scripts": []
          }
        }
      }
    }
  }
}